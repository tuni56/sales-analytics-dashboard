# âœ… Setup
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
import os

# âœ… Cargar el dataset
DATA_PATH = "../data/ventas.csv"
assert os.path.exists(DATA_PATH), f"Archivo no encontrado en {DATA_PATH}"
df = pd.read_csv(DATA_PATH)

# âœ… ConversiÃ³n de columnas de fecha
fecha_cols = ['Order Date', 'Ship Date']
print("\nğŸ“… Columnas de fecha identificadas:", fecha_cols)

# Convertir columnas de fecha
for col in fecha_cols:
    df[col] = pd.to_datetime(df[col], errors='coerce')

# Crear columnas auxiliares de aÃ±o y mes a partir de 'Order Date'
df['anio'] = df['Order Date'].dt.year
df['mes'] = df['Order Date'].dt.month

# âœ… CorrecciÃ³n de tipos de datos
cat_cols = [
    'Ship Mode', 'Segment', 'Country', 'City', 'State',
    'Region', 'Category', 'Sub-Category', 'Customer ID',
    'Customer Name', 'Product ID', 'Product Name', 'Order ID'
]
for col in cat_cols:
    df[col] = df[col].astype('category')

# Convertir Postal Code a string conservando nulos
df['Postal Code'] = df['Postal Code'].astype('Int64').astype('string')

# âœ… Vista general
print(df.head())
print(df.info())
print(df.describe(include='all'))

# âœ… Verificar columnas nulas
missing = df.isnull().sum().sort_values(ascending=False)
print("\nğŸ” Valores nulos por columna:")
print(missing[missing > 0])

# âœ… Distribuciones de columnas numÃ©ricas
plt.figure(figsize=(12, 5))
sns.histplot(df['Sales'], kde=True)
plt.title("DistribuciÃ³n de Ventas")
plt.xlabel("Ventas")
plt.show()

# âœ… Conteo de categorÃ­as
for col in cat_cols:
    print(f"\nğŸ“Š Top categorÃ­as en {col}:")
    print(df[col].value_counts().head(10))

# âœ… CorrelaciÃ³n
plt.figure(figsize=(10, 8))
sns.heatmap(df.corr(numeric_only=True), annot=True, cmap='coolwarm')
plt.title("Mapa de correlaciÃ³n")
plt.show()

# âœ… Exportar versiÃ³n limpia si es necesario
df.to_csv("../data/ventas_limpias.csv", index=False)
